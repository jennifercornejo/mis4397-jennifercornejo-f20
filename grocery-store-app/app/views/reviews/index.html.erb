<div class="container">
  <div class="row">
    <div class="col">
<p id="notice"><%= notice %></p>

<h1 style="color:white;">Reviews</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      
<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th>Note</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     <body style="background-color:#80bfff;">
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.note %></td>
        <td><%= review.store %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path, class: "btn btn-primary" %>

 </div>
  </div>
</div>