<div class="container">
  <div class="row">
    <div class="col">

<p id="notice"><%= notice %></p>

<h1 style="color:white;">Employees</h1>
</div>
</div>
  <div class="row">
    <div class="col">
      
<table class="table table-bordered table-dark">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Description</th>
      <th>Role</th>
      <th>Status</th>
      <th>Department</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <body style="background-color:#80bfff;">
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.description %></td>
        <td><%= employee.role %></td>
        <td><%= employee.status %></td>
        <td><%= employee.department.id %></td>
        <td><%= link_to 'Show', employee, class: "btn btn-primary" %></br></br>
        <td><%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-primary" %></br></br>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></br></br>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Employee', new_employee_path, class: "btn btn-primary" %>

  </div>
  </div>
</div>