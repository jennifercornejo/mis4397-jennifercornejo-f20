<div class="container">
  <div class="row">
    <div class="col">
      
      <p id="notice"><%= notice %></p>
      
      <h1 style="color:white;">Stores</h1>
    </div>
  </div>
  <div class="row">
    <div class="col">
      
<table class="table table-bordered table-dark">

        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Url</th>
            <th>Status</th>
            <th>Code</th>
            <th>Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zip</th>
            <th>Country</th>
            <th colspan="3"></th>
          </tr>
        </thead>
      
        <tbody>
          <body style="background-color:#80bfff;">
          <% @stores.each do |store| %>
            <tr>
              <td><%= store.name %></td>
              <td><%= store.description %></br>
              <td><%= store.url %></td>
              <td><%= store.status %></td>
              <td><%= store.code %></td>
              <td><%= store.address %></td>
              <td><%= store.city %></td>
              <td><%= store.state %></td>
              <td><%= store.zip %></td>
              <td><%= store.country %></td>
              <td><%= link_to 'Show', store, class: "btn btn-primary" %></br> </br>
              <%= link_to 'Edit', edit_store_path(store), class: "btn btn-primary" %><br/></br>
              <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %><br/>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Store', new_store_path, class: "btn btn-primary" %>

  </div>
  </div>
</div>



